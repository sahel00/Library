                <div class="checkbox">
                    @Html.EditorFor(model => model.Riportato)
                    @Html.ValidationMessageFor(model => model.Riportato, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modifica" class="btn btn-default" />
            </div>
