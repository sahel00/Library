@model Biblioteca.Models.Prestiti

@{
    ViewBag.Title = "UpdatePrestito";
}

<h2>UpdatePrestito</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Prestiti</h4>
        <hr />
